  <ThingDef Name="HeronDoorRemote" ParentName="HeronMetalDoorBase">
    <defName>PH_DoorRemoteSingle</defName>
    <label>remote door (1x1)</label>
    <description>Vertical sliding metal door. Uses less power than an autodoor but opens more slowly. Can be opened and closed from a distance with a button or lever.</description>
    <building>
      <soundDoorOpenManual>HeronGarageOpen</soundDoorOpenManual>
      <soundDoorCloseManual>HeronGarageClose</soundDoorCloseManual>
    </building>
    <statBases>
      <Mass>20</Mass>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToBuild>1100</WorkToBuild>
      <DoorOpenSpeed>0.25</DoorOpenSpeed> <!-- when powered, 0.25*4 = 1x door speed (1/4 autodoor speed) -->
    </statBases>
    <size>(1,1)</size>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Things/Building/Door/DoorRemote_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <!--  no damage marks because they don't move with the door
        <rect>(0,0.12,1,0.76)</rect>-->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <comps>
      <li Class="DoorsExpanded.CompProperties_DoorExpanded">
        <remoteDoor>true</remoteDoor>
        <doorType>StretchVertical</doorType>
        <singleDoor>true</singleDoor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>15</basePowerConsumption> <!-- 30% of equivalent autodoor to compensate for slower door open speed -->
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <uiIconPath>Things/Building/Door/DoorRemote_icon</uiIconPath>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>5</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <designationCategory>Structure</designationCategory>
    <researchPrerequisites>
      <li>ProjectHeron_RemoteDoors</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef Name="HeronDoorDoubleRemote" ParentName="HeronMetalDoorBase">
    <defName>PH_DoorRemoteDouble</defName>
    <label>remote door (2x1)</label>
    <description>Vertical sliding metal door. Uses less power than an autodoor but opens more slowly. Can be opened and closed from a distance with a button or lever.</description>
    <building>
      <soundDoorOpenManual>HeronGarageOpen</soundDoorOpenManual>
      <soundDoorCloseManual>HeronGarageClose</soundDoorCloseManual>
    </building>
    <statBases>
      <Mass>20</Mass>
      <MaxHitPoints>320</MaxHitPoints>
      <WorkToBuild>2200</WorkToBuild>
      <DoorOpenSpeed>0.25</DoorOpenSpeed> <!-- when powered, 0.25*4 = 1x door speed (1/4 autodoor speed) -->
    </statBases>
    <placeWorkers>
      <li>JecsTools.PlaceWorker_Outline</li>
    </placeWorkers>
    <size>(2,1)</size>
    <rotatable>true</rotatable>
    <graphicData>
      <texPath>Things/Building/Door/DoorDoubleRemote_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <!--  no damage marks because they don't move with the door
        <rect>(0,0.12,1,0.76)</rect>-->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <comps>
      <li Class="DoorsExpanded.CompProperties_DoorExpanded">
        <remoteDoor>true</remoteDoor>
        <doorType>StretchVertical</doorType>
        <!-- Top and bottom 4th of door texture is all transparent, so "actual" size of closed door for stretch purposes is (2,1) -->
        <stretchCloseSize>(2,1)</stretchCloseSize>
        <singleDoor>true</singleDoor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>30</basePowerConsumption> <!-- 30% of equivalent autodoor to compensate for slower door open speed -->
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <uiIconPath>Things/Building/Door/DoorDoubleRemoteUI_icon</uiIconPath>
    <costStuffCount>100</costStuffCount>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <designationCategory>Structure</designationCategory>
    <researchPrerequisites>
      <li>ProjectHeron_RemoteDoors</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>
